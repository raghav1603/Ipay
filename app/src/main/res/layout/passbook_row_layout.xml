<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/passbook_transaction_type"
        android:text="Added Money"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/passbook_transaction_date" />
    <TextView
        android:id="@+id/passbook_transaction_date"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@+id/passbook_transaction_type"
        android:layout_marginTop="12dp" />
    <TextView
        android:id="@+id/passbook_transaction_amount"
        android:layout_marginTop="16dp"
        android:text="50"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp" />

</RelativeLayout>